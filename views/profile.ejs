<!doctype html>
<html>
<head>
    <title>Resilient Coders Review:</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
      <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>
<div >

    <div >
        <h1><span class="fa fa-camera-movie"></span> Profile Page</h1>
        <a href="/logout">Logout</a>
    </div>

    <div>

        <!-- LOCAL INFORMATION -->
        <div>
            <div>
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local">Unlink</a>
                <% } else { %>
                    <a href="/connect/local">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div>
           <h2>Review The Northman</h2>
        <% if (user.local.email) { %>
          <form action="/reviews" method="POST">
            <input type="text" value="<%= user.local.email %>" placeholder="Reviewer Name" name="name">
            <input type="text" placeholder="Movie Review" name="review">
            <input class="starScore" type="number" min="1" max="11" name="starScore" value="1">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>
          <ul class="reviews">
          <% for(var i=0; i<reviews.length; i++) {%>
            <li class="review">
              <span><%= reviews[i].name %></span>
              <span><%= reviews[i].review %></span>
              <span><%= reviews[i].starScore %></span>
              <span><%= reviews[i].thumbsUp %></span>
              <span><%= reviews[i].thumbsDown %></span>
              <span><i class="fa fa-star" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-ban" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

</div>

<script src="main.js"></script>

</body>
</html>

