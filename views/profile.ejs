<!doctype html>
<html>
<head>
    <title>Resilient Coders Review:</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
      <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>
<div >

    <div >
        <h1><span class="fa fa-camera-movie"></span> Profile Page</h1>
        <a href="/logout">Logout</a>
    </div>

    <div>

        <!-- LOCAL INFORMATION -->
        <div>
            <div>
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>Id</strong>: <%= user._id %><br>
                        <strong>Username</strong>: <%= user.local.email %><br>
                        <strong>Password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local">Unlink</a>
                <% } else { %>
                    <a href="/connect/local">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div>
           <h2>Review The Northman</h2>
        <% if (user.local.email) { %>
          <form action="/review" method="POST">
            <input type="text" value="<%= user.local.email %>" placeholder="Reviewer Name" name="name">
            <input type="text" placeholder="Movie Review" name="review">
            <select name="reviewScore" class="reviewScore">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
            </select>
            <button class="btn" type="submit">Submit</button>
          </form>
        </div>
        <% } %>
          <ul class="review">
          <% for(var i=0; i<review.length; i++) {%>
            <li class="review">
            <p>
            Resilient User:  <span><%= review[i].name %></span>
            Resilient Review:  <span><%= review[i].review %></span>
            Rating:  <span><%= review[i].reviewScore %></span>
            Likes:  <span><%= review[i].thumbsUp %></span> 
          </p>
             <span><i class="fa fa-star" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-ban" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

</div>

<script src="main.js"></script>

</body>
</html>

